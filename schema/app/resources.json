{
	"meta":{
		"$schema": "http://json-schema.org/draft-04/schema#",
		"title": "Resources Schema Of Rainbow",
		"type": "object",
		"method": "GET"
	},
	"request": {
		"$schema": "http://json-schema.org/draft-04/schema#",
		"title": "请求内容",
		"type": "object"
	},
	"response": {
		"$schema": "http://json-schema.org/draft-04/schema#",
		"title": "响应内容",
		"type": "object",
		"required": ["res"],
		"properties": {
			"resources": {
				"id": "#resources",
				"title": "资源",
				"type": "array",
				"items": {
					"type": "object",
					"required": ["id", "name", "key", "type"],
					"properties": {
						"id": {
							"title": "资源ID",
							"type": "string"
						},
						"name": {
							"title": "资源名称",
							"type": "string"
						},
						"legend": {
							"title": "资源说明",
							"type": "string"
						},
						"key": {
							"title": "资源编码",
							"type": "string"
						},
						"icon": {
							"title": "图标",
							"type": "string"
						},
						"type": {
							"title": "资源类型",
							"type": "string",
							"enum": ["catalog", "view", "link", "iframe", "subview"]
						},
						"url": {
							"title": "URL",
							"type": "string",
							"format": "uri"
						},
						"action": {
							"title": "动作",
							"type": "string"
						},
						"remind": {
							"title": "提醒",
							"type": "boolean"
						},
						"allowMobile": {
							"title": "移动访问",
							"type": "boolean"
						},
						"childs": {
							"title": "子资源",
							"type": "array",
							"items": {
								"$ref": "#resources"
							}
						}
					}
				}
			},
			"apps": {
				"title": "应用",
				"type": "array"
				"items": {
					"type": "object",
					"required": ["id", "name", "key", "type"],
					"properties": {
						"app_id": {
							"title": "应用ID",
							"type": "string"
						},
						"app_name": {
							"title": "应用名称",
							"type": "string"
						},
						"app_alias": {
							"title": "应用别名",
							"type": "string"
						},
						"legend": {
							"title": "应用说明",
							"type": "string"
						},
						"app_type": {
							"title": "应用类型",
							"type": "string",
							"enum": ["general", "desktop", "mobile", "API", "wechat", "portal", "link", "wiki"]
						},
						"session_type": {
							"title": "会话类型",
							"type": "string",
							"enum": ["session", "guest"]
						},
						"app_url": {
							"title": "URL",
							"type": "string"
						},
						"language": {
							"title": "语言",
							"type": "string",
							"enum": ["zh", "en"]
						},
						"icon": {
							"title": "图标",
							"type": "string",
							"format": "uri"
						},
						"logo": {
							"title": "Logo",
							"type": "string",
							"format": "uri"
						},
						"theme": {
							"title": "主题模板",
							"type": "string"
						},
						"style": {
							"title": "风格",
							"type": "string"
						},
						"app_navigation": {
							"title": "应用导航",
							"type": "boolean"
						},
						"user_profile": {
							"title": "用户资料",
							"type": "boolean"
						},
						"remind": {
							"title": "应用提醒",
							"type": "string"
						}
					}
				}
			},
			"user": {
				"type": "object"
			}
		}
	}
}